{
  "name": "@thealamenthed/wealthhealth-modal",
  "version": "1.0.6",
  "type": "module",
  "author": "Dalila LÃ©",
  "description": "Reusable and accessible modal component for HRnet and similar projects",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "modal",
    "react",
    "hrnet",
    "accessibility",
    "tailwind"
  ],
  "types": "./dist/index.d.ts",
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "tailwindcss": "^4.0.0"
  },
  "devDependencies": {
    "esbuild": "^0.19.0"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "esbuild src/index.js --bundle --format=esm --outfile=dist/index.js --external:react --external:react-dom --external:react/jsx-runtime --jsx=automatic",
    "build:cjs": "esbuild src/index.js --bundle --format=cjs --outfile=dist/index.cjs --external:react --external:react-dom --external:react/jsx-runtime --jsx=automatic",
    "prepublishOnly": "npm run build"
  }
}
